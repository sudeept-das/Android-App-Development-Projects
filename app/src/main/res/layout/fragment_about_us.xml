<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation= "vertical"
    android:clickable="true"
    android:paddingTop="11dp"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
    <ImageView
        android:layout_width="220sp"
        android:layout_height="250sp"
        android:background="@drawable/joey"
        android:id="@+id/joey"
        />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joey"
           >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is made by Joey Tribbiani as"
        android:textColor="#212121"
        android:id="@+id/text1"
        android:layout_centerHorizontal="true"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="part of Internshala's Online Training"
            android:textColor="#212121"
            android:layout_below="@+id/text1"
            android:id="@+id/text2"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Training project."
            android:textColor="#212121"
            android:layout_below="@+id/text2"
            android:id="@+id/text3"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App version: 1.0"
            android:textColor="#212121"
            android:layout_below="@+id/text3"
            android:id="@+id/AppVersion"
            android:layout_centerHorizontal="true"
            />
        </RelativeLayout>
</RelativeLayout>
</RelativeLayout>
